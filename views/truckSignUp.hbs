<main class="myMain">
  <form class="truckSignupForm ownerSignupForm" action="/truck" method="post">
    <div class="formTopper">
      <h3>Truck Register</h3>
    </div>
    <div class="form-group">
      <label>Truck Name</label>
      <input type="text" class="form-control" name="truck_name" placeholder="Truck Name" required>
    </div>
    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" name="genre" placeholder="What style of food do you make? (three words or less)" required>
    </div>
    <div class="form-group">
      <label>Brief description of your truck:</label>
      <input type="email" class="form-control" id="ownerSignupEmail" name="ownerSignupEmail" placeholder="All users will be able to read this description!" required>
    </div>
    <div class="form-group">
      <label>Image URL</label>
      <input type="text" class="form-control" name="image_url" placeholder="www.MyPic.com" required>
    </div>
    <h3>Schedule</h3>
    <div class="form-group">
      <label name='sunday'>Sunday</label>
      <input type="text" class="form-control" name="sundayOpen" placeholder="When do you open?" required>
      <input type="text" class="form-control" name="close" placeholder="When do you close?" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="ownerSignupPassword2" name="ownerSignupPassword2" placeholder="Password Match" required>
    </div>
    <input type="submit" class="form-control btn btn-success" id="ownerSignupSubmit" name="ownerSignupSubmit" value="Submit">
    <input type="hidden" name="signupType" value="owner">
  </form>
</main>
