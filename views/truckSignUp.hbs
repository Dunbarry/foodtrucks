<main class="myMain">
  <form class="signupForm userSignupForm" action="/signup" method="post">
    <div class="formTopper">
      <h3>User Signup</h3>
      <button type="button" class="btn btn-info" name="showUserSignupButton" onclick="showForm('owner')">Owner Signup</button>
    </div>
    <div class="form-group">
      <label>First</label>
      <input type="text" class="form-control" id="userSignupFirst" name="userSignupFirst" placeholder="First Name" required>
    </div>
    <div class="form-group">
      <label>Last</label>
      <input type="text" class="form-control" id="userSignupLast" name="userSignupLast" placeholder="Last Name" required>
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" class="form-control" id="userSignupEmail" name="userSignupEmail" placeholder="Email" required>
    </div>
    <div class="form-group">
      <label>Username</label>
      <input type="text" class="form-control" id="userSignupUsername" name="userSignupUsername" placeholder="Username" required>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" id="userSignupPassword" name="userSignupPassword" placeholder="Password" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="userSignupPassword2" name="userSignupPassword2" placeholder="Password Match" required>
    </div>
    <div class="form-group">
      <label>User Profile Picture</label>
      <br>
      <input type="url" name="userPic" class="form-control" id="userSignupPicture" placeholder="URL">
      <output id="list"></output>
    </div>
    <input type="submit" class="form-control btn btn-success" id="userSignupSubmit" name="userSignupSubmit" value="Submit">
    <input type="hidden" name="signupType" value="user">
  </form>

  <form class="signupForm ownerSignupForm" action="/truck" method="post">
    <div class="formTopper">
      <h3>Truck Register</h3>
    </div>
    <div class="form-group">
      <label>Truck Name</label>
      <input type="text" class="form-control" name="truck_name" placeholder="Truck Name" required>
    </div>
    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" name="genre" placeholder="What style of food do you make? (three words or less)" required>
    </div>
    <div class="form-group">
      <label>Please give a brief description of your truck</label>
      <input type="email" class="form-control" id="ownerSignupEmail" name="ownerSignupEmail" placeholder="Remember: all users will be able to read this description!" required>
    </div>
    <div class="form-group">
      <label>Image URL</label>
      <input type="text" class="form-control" name="image_url" placeholder="www.MyPic.com" required>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" id="ownerSignupPassword" name="ownerSignupPassword" placeholder="Password" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="ownerSignupPassword2" name="ownerSignupPassword2" placeholder="Password Match" required>
    </div>
    <input type="submit" class="form-control btn btn-success" id="ownerSignupSubmit" name="ownerSignupSubmit" value="Submit">
    <input type="hidden" name="signupType" value="owner">
  </form>
</main>
