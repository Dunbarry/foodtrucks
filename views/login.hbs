<main class="myMain">
  <form class="loginForm" action="/login" method="post">
    <fieldset>
      <div class="formTopper">
        <h3>Login</h3>
        <a href="/signup" class="btn btn-info">Sign up for account</a>
      </div>
      <hr>
      <div class="form-group">
        <label for="inputEmail" class="control-label">Email or Username</label>
        <input type="text" class="form-control" name="loginEmail" placeholder="Email/Username">
      </div>
      <div class="form-group">
        <label for="inputPassword" class="control-label">Password</label>
        <input type="password" class="form-control" name="loginPassword" placeholder="Password">
      </div>
      <div class="form-group">
          <input type="submit" class="form-control btn btn-success" name="submit" value="Submit">
      </div>
    </fieldset>
  </form>
</main>
