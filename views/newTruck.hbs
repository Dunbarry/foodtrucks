<main class="myMain">
  <form class="newTruckForm" action="/newTruck" method="post">
    <div class="formTopper">
      <h3>Add Truck</h3>
    </div>
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" id="newTruckName" name="newTruckName" placeholder="Truck Name" required>
    </div>
    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" id="newTruckGenre" name="newTruckGenre" placeholder="Food Type" required>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea name="newTruckDescription" class="form-control" id="newTruck" rows="8" cols="40" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
      <label>Truck Image</label>
      <input type="file" class="form-control" id="files" name="newTruckImage"/>
      <output id="list"></output>
    </div>
    <input type="submit" class="form-control btn btn-success" id="newTruckSubmit" name="newTruckSubmit" value="Submit">
    <input type="hidden" name="newTruckOwner" value="{{owner_id}}">
  </form>
</main>
